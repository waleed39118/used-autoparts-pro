<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">
      <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
    </h1>
    <span class="badge bg-primary">Admin Panel</span>
  </div>

  <%- include('../partials/flash') %>

  <!-- Stats Cards -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="card-title">Total Users</h5>
              <h2 class="mb-0"><%= stats.totalUsers %></h2>
            </div>
            <div class="align-self-center">
              <i class="fas fa-users fa-2x"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card bg-success text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="card-title">Total Spare Parts</h5>
              <h2 class="mb-0"><%= stats.totalParts %></h2>
            </div>
            <div class="align-self-center">
              <i class="fas fa-cogs fa-2x"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-bolt me-2"></i>Quick Actions
          </h5>
        </div>
        <div class="card-body">
          <a href="/admin/parts" class="btn btn-outline-primary me-2">
            <i class="fas fa-cogs me-2"></i>Manage Parts
          </a>
          <a href="/spare-parts/new" class="btn btn-outline-success">
            <i class="fas fa-plus me-2"></i>Add New Part
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Users -->
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-users me-2"></i>Recent Users
          </h5>
        </div>
        <div class="card-body">
          <% if (users.length === 0) { %>
            <p class="text-muted mb-0">No users found.</p>
          <% } else { %>
            <div class="list-group list-group-flush">
              <% users.forEach(user => { %>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <strong><%= user.username %></strong>
                    <br>
                    <small class="text-muted"><%= user.email %></small>
                    <br>
                    <span class="badge bg-<%= user.role === 'admin' ? 'warning' : 'secondary' %>"><%= user.role %></span>
                  </div>
                  <div>
                    <% if (user.role !== 'admin') { %>
                      <form method="POST" action="/admin/users/<%= user._id %>?_method=DELETE" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this user?')">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    <% } %>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Recent Parts -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-cogs me-2"></i>Recent Parts
          </h5>
        </div>
        <div class="card-body">
          <% if (parts.length === 0) { %>
            <p class="text-muted mb-0">No parts found.</p>
          <% } else { %>
            <div class="list-group list-group-flush">
              <% parts.forEach(part => { %>
                <div class="list-group-item">
                  <div class="d-flex justify-content-between">
                    <strong>
                      <a href="/spare-parts/<%= part._id %>" class="text-decoration-none">
                        <%= part.name %>
                      </a>
                    </strong>
                    <small class="text-muted"><%= part.price.toFixed(2) %> BHD</small>
                  </div>
                  <small class="text-muted">
                    <i class="fas fa-user me-1"></i><%= part.owner?.username || 'Unknown' %>
                    | <i class="fas fa-car me-1"></i><%= part.carType?.name %> - <%= part.carModel?.name %>
                  </small>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
